{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./",   // Set the rootDir to the project root
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "prisma/**/*"    // Add prisma folder to include seed.ts
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
